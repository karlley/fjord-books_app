<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= l @report.created_at, format: :long %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %>:</strong>
  <%= @report.content %>
</p>

<% if @comments.present? %>
  <table>
    <thead>
      <tr>
        <th><%= Comment.human_attribute_name(:comment_user) %></th>
        <th><%= Comment.human_attribute_name(:content) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <% if comment.persisted? %>
          <tr>
            <td><%= comment.user.name_or_email %></td>
            <td><%= comment.content %></td>
            <td><%= l comment.created_at, format: :short %></td>
            <% if comment.user == current_user %>
              <td><%= link_to t('views.common.destroy'), report_comment_url(@report, comment), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>コメントはありません</p>
<% end %>

<%= form_with(model: [@report, @comment], url: polymorphic_path([@report, @comment]), method: :post) do |form| %>

  <% if flash[:errors].present? %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% flash[:errors].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
    <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% if @report.user == current_user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('views.common.back'), reports_path %>
