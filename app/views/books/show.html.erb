<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% if @comments.present? %>
  <table>
    <thead>
      <tr>
        <th><%= Comment.human_attribute_name(:comment_user) %></th>
        <th><%= Comment.human_attribute_name(:content) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <% if comment.persisted? %>
          <tr>
            <td><%= comment.user.name_or_email %></td>
            <td><%= comment.content %></td>
            <td><%= l comment.created_at, format: :short %></td>
            <% if comment.user == current_user %>
              <td>削除</td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>コメントはありません</p>
<% end %>

<%= form_with(model: [@book, @comment], url: polymorphic_path([@book, @comment]), method: :post) do |form| %>

  <% if flash[:errors].present? %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% flash[:errors].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
    <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

